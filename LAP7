#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    int play;
    
    srand(time(NULL));

    do {
        int score = 100;
        int winningNumber = 42;
        int guess;

        printf("Do you want to play game (1=play,-1=exit): ");
        scanf("%d", &play);

        if (play == 1) {
            printf("(Score=%d)\n", score);
            while (score > 0) {
                printf("Guess the winning number (1-100): ");
                scanf("%d", &guess);

                if (guess < 1 || guess > 100) {
                    printf("Please guess a number between 1 and 100.\n");
                    continue;
                }

                if (guess < winningNumber) {
                    score -= 10;
                    printf("Sorry, the winning number is HIGHER than %d. (Score=%d)\n", guess, score);
                } else if (guess > winningNumber) {
                    score -= 10;
                    printf("Sorry, the winning number is LOWER than %d. (Score=%d)\n", guess, score);
                } else {
                    printf("That is correct! The winning number is %d.\n", winningNumber);
                    printf("Score this game: %d\n", score);
                    break;
                }
                if (score <= 0) {
                    printf("Game Over! You've lost all your points.\n");
                }
            }
        }

    } while (play != -1);

    return 0;
}//end main function
